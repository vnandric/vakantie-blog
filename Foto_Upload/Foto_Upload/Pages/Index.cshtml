@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    <div class="jumbotron">
        <img src="~/PhotoCloudLogo.png" alt="Logo" class="img-fluid mb-4">
        <h1 class="display-4">Welkom bij de PhotoCloud!</h1>
        <p class="lead">Een gemakkelijke manier om foto's te delen en te uploaden.</p>
        <hr class="my-4">
        <p>Klik op "Foto's bekijken" om de foto's van eerdere evenementen te zien.</p>
      <p>Klik op "Foto's uploaden" om foto's van het huidige evenement te uploaden.</p>
  </div>
</div>
