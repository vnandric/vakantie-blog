@page
@model Foto_Upload.Pages.RegisterModel
@{
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-4">
            <div class="card border-light">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Register</h1>
                    <hr class="my-4">

                    <form method="post">
                        <div class="form-group">
                            <label for="username" class="form-label">Username:</label>
                            <input type="text" class="form-control" id="username" asp-for="User.Username">
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="password" asp-for="User.Password">
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword" class="form-label">Confirm Password:</label>
                            <input type="password" class="form-control" id="confirmPassword" asp-for="User.ConfirmPassword">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
